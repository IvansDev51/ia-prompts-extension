{
  "manifest_version": 3,
  "name": "Notes Extension",
  "version": "1.0",
  "description": "A simple Chrome extension to save and list notes",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Notes",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png",
      "48": "icons/android-icon-48x48.png"
    }
  },

  "icons": {
    "16": "icons/favicon-16x16.png",
    "48": "icons/android-icon-48x48.png",
    "128": "icons/android-icon-192x192.png"
  }
}